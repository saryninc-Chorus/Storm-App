# Mitigate dev freezes in CRA
# Disable Fast Refresh (can cause loops with certain setups)
FAST_REFRESH=false
# Use polling watcher (helpful on network/VM/WSL/ChromeOS file systems)
CHOKIDAR_USEPOLLING=true
# Poll interval; increase if CPU spikes
CHOKIDAR_INTERVAL=200
# Silence overlay reload spam
WDS_SOCKET_PORT=0
